<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightblue"
    tools:context="com.example.punto3.MainActivity">
<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cua"
                android:textSize="25sp"
                android:checked="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="20sp"
                android:id="@+id/cua"
                android:layout_weight="0.10" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tri"
                android:textSize="25sp"
                android:checked="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="20sp"
                android:id="@+id/tri"
                android:layout_weight="0.10" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rec"
                android:textSize="25sp"
                android:layout_marginLeft="30sp"
                android:checked="true"
                android:layout_marginTop="20sp"

                android:id="@+id/rec"
                android:layout_weight="0.10" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cir"
                android:textSize="25sp"
                android:checked="true"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="20sp"
                android:id="@+id/cir"
                android:layout_weight="0.10" />
        </LinearLayout>
    </LinearLayout>

</RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/layocua"
            android:gravity="center"
            >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lado"
                android:hint="valor del lado"
                android:layout_gravity="center"
                android:inputType="number"
                android:layout_marginTop="40sp"
                android:textSize="25sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/layotri"
            android:gravity="center"
            >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/base"
                android:hint="valor base"
                android:layout_gravity="center"
                android:inputType="number"
                android:layout_marginTop="40sp"
                android:textSize="25sp"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/altura"
                android:hint="valor altura"
                android:layout_gravity="center"
                android:inputType="number"
                android:textSize="25sp"
                android:layout_marginTop="40sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/layorec"
            android:gravity="center"
            >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lado1"
                android:hint="valor lado 1"
                android:layout_gravity="center"
                android:inputType="number"
                android:textSize="25sp"
                android:layout_marginTop="40sp"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lado2"
                android:hint="valor lado 2"
                android:layout_gravity="center"
                android:inputType="number"
                android:layout_marginTop="40sp"
                android:textSize="25sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/layocir"
            android:gravity="center"
            >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio"
                android:hint="valor radio"
                android:layout_gravity="center"
                android:inputType="number"
                android:layout_marginTop="40sp"
                android:textSize="25sp"
                />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="70sp"
            android:layout_gravity="center"
            android:text="Calcular"
            android:id="@+id/calcular"
            android:layout_marginTop="40sp"
            android:textSize="25sp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:textSize="40sp"
            android:layout_marginTop="40sp"
            android:hint="valor del area"
            android:gravity="center"
            android:id="@+id/area"

            />
</LinearLayout>
</LinearLayout>
